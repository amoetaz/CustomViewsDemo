<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PizzaView">
        <attr name="num_wedges" format="integer"/>
        <attr name="stroke_width" format="dimension"/>
        <attr name="pizza_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="ColorSlider">
        <attr name="colors" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ToastView">
        <attr name="toast_radius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ColorDialView">
        <attr name="colors"/>
        <attr name="tickRaduis" format="dimension"/>
        <attr name="tickPadding" format="dimension"/>
        <attr name="dialDiameter" format="dimension"/>
        <attr name="scaleToFit" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="DashView">
        <attr name="color" format="color" />
        <attr name="circelColor" format="color"/>
        <attr name="dashLength" format="dimension" />
        <attr name="dashGap" format="dimension" />
        <attr name="dashThickness" format="dimension" />
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="circlePostionPercentage" format="float"/>
        <attr name="circleRadius" format="dimension"/>
    </declare-styleable>

</resources>